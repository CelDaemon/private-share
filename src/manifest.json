{
    "manifest_version": 3,
    "name": "Private Share",
    "version": "dev",
    "description": "Remove tracking from share functions",
    "icons": {
        "32": "icon.svg",
        "64": "icon.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.reddit.com/*",
                "https://www.youtube.com/*",
                "https://music.youtube.com/*",
                "https://x.com/*"
            ],
            "js": ["content.js"],
            "run_at": "document_start",
            "world": "MAIN"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "private-share@voidgroup.net"
        }
    }
}
